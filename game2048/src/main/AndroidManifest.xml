<manifest xmlns:android="http://schemas.android.com/apk/res/android"

          package="com.example.game2048"
>

    <uses-permission android:name="android.permission.INTERNET" />

    <application android:allowBackup="true"
                 android:icon="@mipmap/ic_launcher"
                 android:label="@string/app_name"
                 android:roundIcon="@mipmap/ic_launcher_round"
                 android:theme="@style/AppTheme">

        <!--各种活动-->
        <activity
            android:name="com.example.game2048.MainActivity"
            android:label="@string/app_name"
            android:screenOrientation="portrait" />
        <activity android:name="com.example.game2048.SplashActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name="com.example.game2048.WebHelpActivity" />
        <activity android:name="com.example.game2048.LoginActivity" />
        <activity android:name="com.example.game2048.ChartsActivity" />
        <activity android:name="com.example.game2048.InfoActivity" />

        <!--各种服务-->
        <service android:name="com.example.game2048.Service.BackGroundMusicService" />
    </application>

</manifest>
