        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <Button
            android:id="@+id/btn01"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="ring" />

        <Button
            android:id="@+id/btn02"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="VPager"/>

        <Button
            android:id="@+id/btn03"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="VFilpper"/>

        <Button
            android:id="@+id/btn04"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="list"/>

        <Button
            android:id="@+id/btn05"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="bloom"/>

        <Button
            android:id="@+id/btn06"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="UI"/>

        <Button
            android:id="@+id/btn07"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="UI"/>
    </LinearLayout>

</android.support.constraint.ConstraintLayout>